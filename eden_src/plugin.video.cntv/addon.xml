<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.cntv"
    name="中国网络电视台点播(CNTV)"
    version="1.0.3"
    provider-name="Robinttt">
    <extension
        point="xbmc.python.pluginsource"
        library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">CNTV video plugin</summary>
        <summary lang="zh">中国网络电视台点播插件</summary>
        <description lang="en">CNTV video plugin use internal player of xbmc to play video and live tv online, support all os platform.</description>
        <description lang="zh">中国网络电视台点播插件完全采用XBMC内置播放器播放天翼视讯点播和直播内容，可在所有操作系统平台使用。</description>
        <platform>all</platform>
    </extension>
</addon>